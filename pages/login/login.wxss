/* pages/login.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 35rpx;
}

.logo {
    width: 144rpx;
    height: 144rpx;
    margin-top: 100rpx;
}

.login-btn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 10rpx;
}
.wx-login {
    font-size: 35rpx;
    color: #fff;
    background-color: #42BD55;
    margin-top: 70rpx;
}
.douban-login {
    font-size: 35rpx;
    color: #42BD55;
    border: 1rpx solid #42BD55;
    margin-top: 35rpx;
}

.agreement {
    display: flex; 
    flex-direction: row;
    color: #9d9d9d;
    font-size: 28rpx;
    position: absolute;
    bottom: 30rpx;
}
.agreement .protocol {
    color: #42BD55;
    margin-left: 8rpx;
}